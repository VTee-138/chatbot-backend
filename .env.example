# Environment variables template
# Copy this file to .env and update the values

# Database URL - Update this with your PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database_name?sslmode=prefer
DATABASE_URL="postgresql://username:password@your_host:5432/database_name?sslmode=prefer"

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Secrets
JWT_SECRET=
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=7d
JWT_VALIDATE_SECRET=
JWT_VALIDATE_EXPIRES_IN=40s

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Security
BCRYPT_ROUNDS=12

# API Key Settings
API_KEY_LENGTH=32

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

#REDIS
REDIS_HOST = 
REDIS_PASS = 
REDIS_PORT = 
REDIS_STORE_SECRET = 

#NODE_MAILER
USER_MAIL = 
APP_PASSWORD 

#GOOGLE
GOOGLE_CLIENT_ID = 
GOOGLE_CLIENT_SECRET = 
GOOGLE_CALLBACK_URL =

# FACEBOOK
FACEBOOK_APP_SECRET =
FACEBOOK_APP_ID = 